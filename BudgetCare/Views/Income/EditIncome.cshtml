@model BudgetCare.Models.tbl_Income

@{
    ViewBag.Title = "EditIncome";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<section class="content">

    <!-- Default box -->
    <div class="box">
        <div class="box-header with-border">
            <h3 class="box-title">Edit Income</h3>


            <div class="box-tools pull-right">
                <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip" title="" data-original-title="Collapse">
                    <i class="fa fa-minus"></i>
                </button>
                <button type="button" class="btn btn-box-tool" data-widget="remove" data-toggle="tooltip" title="" data-original-title="Remove">
                    <i class="fa fa-times"></i>
                </button>
            </div>
        </div>
        <div class="box-body">


            @using (Html.BeginForm("EditIncome", "Income", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.incId)
                @Html.HiddenFor(model => model.userId)

                <div class="box box-primary">
                    <div class="col-md-6">


                        <div class="box-body">

                            <div class="form-group">
                                <label for="exampleInputEmail1"> Amount</label>
                                <input type="number" class="form-control" name="amount" value="@Model.amount" id="title" placeholder="Amount" required="">
                            </div>


                            <div class="form-group">
                                <label for="exampleInputPassword1">Description</label>
                                <input type="text" class="form-control" name="description" id="subtitle" value="@Model.description" placeholder="Description" required="">
                            </div>

                            <div class="form-group">
                                <label for="exampleInputEmail1"> Date</label>
                                <input type="date" class="form-control" name="date" id="subtitle" value="@Model.date" placeholder="Date" required="">


                            </div>


                            <div class="form-group">
                                <label class="col-sm-2 control-label">Catagory</label>

                                @Html.DropDownList("catid", (SelectList)ViewBag.cat, "Select Catagory", new { @class = "form-control" })





                            </div>


                        </div>
                        <!-- /.box-body -->

                        <div class="box-footer">
                            <input type="submit" value="Save" class="btn btn-default" />
                        </div>



                    </div>
                    <div class="col-md-6">



                        <div class="box-body">




                        </div>
                        <!-- /.box-body -->





                    </div>


                </div>
            }

            <!--/.col (right) -->



        </div>
    </div>

</section>