@model BudgetCare.Models.tbl_Caterory

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit</h2>

@using (Html.BeginForm("Edit", "Categories", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.catryID)

    <div class="form-group">
        <label class="control-label col-md-2">Title</label>
        @*@Html.LabelFor(model => model.catryTitle, htmlAttributes: new { @class = "control-label col-md-2" })*@
        <div class="col-md-6">
            @Html.EditorFor(model => model.catryTitle, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.catryTitle, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2"> Description</label>

        <div class="col-md-6">
            @Html.EditorFor(model => model.catDesp, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.catDesp, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2"> Image</label>

        <div class="col-md-6">
            
            <img src="~/images/@Model.imgUrl" alt=""  width="200" height="100"/>
            
            

        </div>
    </div>





    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
